<%= javascript_include_tag "assets.js", :plugin => "redmine_assets_plugin" %>
<%= javascript_include_tag "jquery.infinitescroll.js", :plugin => "redmine_assets_plugin" %>
<div id="project-assets">
  <h2><%= l(@mapping['i18n'].nil? ? 'label_'+@type.underscore : @mapping['i18n']) %> <%= l(:assets_project_heading) %> <%= @project.name %></h2>
    <div class="infinite-table attachments thumbnails images">
      <table id='assets'>
        <%= render :partial => 'links', :locals => {:attachments => @assets, :options => @options, :category_relation => @mapping['category'].nil? ? nil : @mapping['category']['relation']} %>
      </table>
      <p class="pagination">
          <%= paginate @assets %>
      </p>
    </div>
  </div>
</div>
